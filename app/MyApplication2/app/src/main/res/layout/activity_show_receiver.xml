<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".receiver_manage.ShowReceiverActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/show_re_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/name_img"
        android:src="@drawable/rename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/reNameCue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名:"
        android:layout_marginTop="14dp"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/reName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:textSize="18sp"/>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/email_img"
            android:src="@drawable/reemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/reMailCue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮箱地址:"
            android:layout_marginTop="14dp"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/reMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@android:drawable/edit_text"
            android:enabled="true"
            android:textCursorDrawable="@drawable/myedittext"
            android:textSize="18sp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/phone_img"
            android:src="@drawable/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/rePhoneCue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话号码:"
            android:layout_marginTop="14dp"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/rePhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@android:drawable/edit_text"
            android:enabled="true"
            android:textCursorDrawable="@drawable/myedittext"
            android:textSize="18sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/reSex_img"
            android:src="@drawable/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/reSexCue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:layout_marginTop="14dp"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/reSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:textSize="18sp"/>

    </LinearLayout>
    <Button
        android:id="@+id/reSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存"
        android:textSize="18sp"/>
</LinearLayout>